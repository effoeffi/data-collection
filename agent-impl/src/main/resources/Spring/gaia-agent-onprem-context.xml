<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

    <bean id="onPremAgentConfigService" class="com.hp.gaia.agent.onprem.service.OnPremAgentConfigService"/>

    <bean id="onPremCredentialsService" class="com.hp.gaia.agent.onprem.service.OnPremCredentialsService"/>

    <bean id="onPremProvidersConfigService" class="com.hp.gaia.agent.onprem.service.OnPremProvidersConfigService"/>

    <bean id="onPremCollectionStateService" class="com.hp.gaia.agent.onprem.service.OnPremCollectionStateService"/>

    <bean id="dataCollectionJob" class="com.hp.gaia.agent.onprem.DataCollectionJob"/>

    <bean id="dataCollectionJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="dataCollectionJob"/>
        <property name="targetMethod" value="execute"/>
        <property name="concurrent" value="false"/>
    </bean>

    <bean id="dataCollectionJobTrigger" class="org.springframework.scheduling.quartz.SimpleTriggerFactoryBean">
        <property name="jobDetail" ref="dataCollectionJobDetail"/>
        <property name="startDelay" value="5000"/>
        <property name="repeatInterval" value="60000"/>
    </bean>

    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="dataCollectionJobTrigger"/>
            </list>
        </property>
    </bean>
</beans>